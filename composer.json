{
    "name": "dmax/clarity-tools",
    "description": "Tools for creating directories to support clean architecture in Laravel.",
    "autoload": {
        "psr-4": {
            "Dmax\\ClarityTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Dimuthu",
            "email": "phdimuthukumara@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "illuminate/support": "^10.0 || ^11.0",
        "dmax/clarity-tools": "^1.1"
    },
    "require-dev": {
        "dmax/clarity-tools": "^1.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dmax\\ClarityTools\\ClarityToolsServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate"
        ]
    },
    "version": "1.1.0",
    "license": "MIT"
}
